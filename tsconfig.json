{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": true,
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "noImplicitAny": true
    },
    "include": [
        "./src/**/*",
        "./src/data/smartapi_specs.json",
        "./src/data/predicates.json"
    ],
    "exclude": [
        "node_modules",
        "__tests__/"
    ]
}